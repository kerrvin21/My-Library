<h2>Search Book</h2>
<form action="books">
    <div class="form_fields">
        <label for="title">Title</label>
        <input type="text" name="title" value="<%=searchParams.title%>">
    </div>
    <div class="form_fields">
        <label for="publishAfter">Publish After</label>
        <input type="date" name="publishAfter" value="<%=searchParams.publishAfter%>">
    </div>
    <div class="form_fields">
        <label for="publishBefore">Publish Before</label>
        <input type="date" name="publishBefore" value="<%=searchParams.publishBefore%>">
    </div>
    <div class="form_action">
        <a href="/">cancel</a>
        <button type="submit">Search</button>
    </div>
</form>

