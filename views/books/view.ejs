<h2>
    <%= book.title%>
        <img height='250' width='200' src="<%= book.coverImagePath%>" />
        <div class="info">
            <p>Title : <%= book.title%>
            </p>
            <p>Description : <%= book.description%>
            </p>
            <p>Publish Date : <%= book.publishDate.toDateString()%>
            </p>
            <p>Author : <%= book.author.name%>
            </p>

        </div>
        <div class="trans">
            <a href="/books/edit/<%= book._id%>">Edit</a>
            <a href="/authors/<%= book.author%>">View Author</a>
            <%- include('../partials/_delete_file',{action_link:`/books/${book._id}?_method=DELETE`})%>
        </div>
</h2>